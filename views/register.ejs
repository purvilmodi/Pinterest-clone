<% include ./partials/header.ejs %>
  <div class="w-full bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1551554781-c46200ea959d?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8ODJ8fGxvZ2luJTIwcGFnZSUyMGJhY2tncm91bmR8ZW58MHx8MHx8fDA%3D')]  h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-2xl text-center font-semibold font-zinc-700 tracking-tighter capitalize leading-none "> Create new Account</h1>
      <% if (locals.error) { %>
        <div class="text-red-500 text-sm mt-2"><%= error %></div>
      <% } %>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full name">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-4/8 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection</p>
      </form>
      <a href="/" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Login Existing Account</a>
    </div>
  </div>
<% include ./partials/footer.ejs %> 