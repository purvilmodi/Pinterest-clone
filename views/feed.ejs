<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-stone-50 px-10 py-8">
    <!-- Masonry-style layout using columns -->
    <div class="columns-1 sm:columns-2 md:columns-3 lg:columns-4 gap-2 space-y-4">
        <% posts.forEach(post => { %>
            <div class="relative group break-inside-avoid mb-4 overflow-hidden rounded-lg bg-zinc-700">
                <img class="w-full h-auto object-cover" src="/images/uploads/<%= post.image %>" alt="">
                
                <!-- Title and circular download button, visible on hover -->
                <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 flex justify-between p-2 text-white">
                    <h5 class="text-lg font-semibold">
                        <%= post.title %>
                    </h5>
                    <a href="/images/uploads/<%= post.image %>" download class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-black hover:bg-gray-200">
                        <i class="font-semibold text-red-700 ri-arrow-down-line"></i>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
